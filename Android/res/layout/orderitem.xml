<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    tools:context=".MainActivity"
    android:layout_marginBottom="8dp"
    android:background="@drawable/orderlist_sel" >

    <RelativeLayout
        android:id="@+id/warnning_tag"
        android:layout_width="18dp"
        android:layout_height="56dp"
        android:background="#ec2f2f"
        android:gravity="center_vertical" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="!"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:gravity="center" />
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginLeft="18dp"
        android:padding="4dp"
        android:orientation="vertical"
        android:gravity="center_vertical" >
        
        <TextView
            android:id="@+id/order_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:textColor="#6b6b6b"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/order_list_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="world"
            android:textColor="#2e2d2b"
            android:textSize="16sp"
            android:layout_marginTop="2dp" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true" >
        
        <ImageView
	        android:src="@drawable/item_goto"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="12dp" />
    
    </LinearLayout>
    
</RelativeLayout>