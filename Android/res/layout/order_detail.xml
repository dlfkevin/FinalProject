<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
	tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor" >
	
    <com.example.finalproject.Widget.BackTitleBar
        android:id="@+id/orderdetail_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >
        
    </com.example.finalproject.Widget.BackTitleBar>

    <ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
    	android:layout_marginTop="46dp" >
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="#ffffff" >
	        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="订单状态："
	        android:textColor="#2e2d2b"
	        android:textSize="16sp"
	        android:layout_marginLeft="12dp"
	        android:gravity="center_vertical" />
	        
	    <TextView
	        android:id="@+id/orderitem_status"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="店主已受理"
	        android:textSize="16sp"
	        android:textColor="#29b862"
	        android:layout_marginLeft="14dp"
	        android:gravity="center_vertical" />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="#ffffff" >
	        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="订单状态："
	        android:textColor="#2e2d2b"
	        android:textSize="16sp"
	        android:layout_marginLeft="12dp"
	        android:gravity="center_vertical" />
	        
	    <TextView
	        android:id="@+id/order_time"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="2014年1月10日  18:00"
	        android:textSize="16sp"
	        android:textColor="#919191"
	        android:layout_marginLeft="14dp"
	        android:gravity="center_vertical" />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="#ffffff" >
	        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="您的座位："
	        android:textColor="#2e2d2b"
	        android:textSize="16sp"
	        android:layout_marginLeft="12dp"
	        android:gravity="center_vertical" />
	        
	    <TextView
	        android:id="@+id/order_location"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="新天地3楼 A区 3排10座"
	        android:textSize="16sp"
	        android:textColor="#919191"
	        android:layout_marginLeft="14dp"
	        android:gravity="center_vertical" />
	    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:padding="12dp"
        android:background="#ffffff" >
	        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="您的订单："
	        android:textColor="#2e2d2b"
	        android:textSize="16sp"
	        android:layout_marginBottom="14dp"
	        android:gravity="center_vertical" />
	        
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="菜名"
	            android:textSize="16sp"
	            android:layout_alignParentLeft="true"
	            android:textColor="#919191" />
	        
	        <TextView
	            android:layout_width="48dp"
	            android:layout_height="wrap_content"
	            android:text="数量"
	            android:textSize="16sp"
	            android:layout_alignParentRight="true"
	            android:textColor="#919191"
	            android:gravity="center_horizontal" />
	        
	        <TextView
	            android:layout_width="48dp"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="64dp"
	            android:layout_alignParentRight="true"
	            android:text="单价"
	            android:textSize="16sp"
	            android:textColor="#919191"
	            android:gravity="center_horizontal" />
	        
	    </RelativeLayout>
	    
	    <ListView
	        android:id="@+id/orderdetail_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:divider="@null"
	        android:dividerHeight="0dp" >
		</ListView>
	    
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="#ffffff" >
	        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="总计："
	        android:textColor="#2e2d2b"
	        android:textSize="16sp"
	        android:layout_marginLeft="12dp"
	        android:gravity="center_vertical" />
	        
	    <TextView
	        android:id="@+id/order_price"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="12dp"
	        android:text="￥ 40"
	        android:textSize="24sp"
	        android:textColor="#04b352"
	        android:layout_marginLeft="14dp"
	        android:gravity="center_vertical" />
	    
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:padding="12dp"
        android:background="#ffffff" >
	        
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="您的评价："
	        android:textColor="#2e2d2b"
	        android:textSize="16sp"
	        android:layout_marginBottom="14dp"
	        android:gravity="center_vertical" />
	        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="8dp"
	        android:orientation="horizontal"
			android:gravity="center" >
	        
	        <ImageButton
	            android:id="@+id/like_button"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_marginRight="96dp"
	            android:src="@drawable/like_unsel"
	            android:background="@drawable/like_button" />
	        
	        <ImageButton
	            android:id="@+id/dislike_button"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:src="@drawable/dislike_unsel"
	            android:background="@drawable/dislike_button" />
	    </LinearLayout>
	    
    </LinearLayout>
    
</LinearLayout>

</ScrollView>

</RelativeLayout>